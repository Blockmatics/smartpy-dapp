if "templates" not in __name__:
    @addTest(name = "FA12")
    def test():

        scenario = sp.testScenario()
        scenario.h1("Simple FA12 Contract")

        admin = sp.address("tz1fJgXJ5cRqvTR2aZkxnk2JyrJURVCcnvj5")
        office = sp.address("tz1fJgXJ5cRqvTR2aZkxnk2JyrJURVCcnvj5")
        alice = sp.address("tz1-alice-address-43287")
        bob   = sp.address("tz1-bob-address-75893")

        c1 = FA12(admin)

        scenario += c1
        scenario.h2("Admin mints a few coins")
        scenario += c1.mint(address = alice, amount = 120).run(sender = admin)
        # scenario += c1.mint(address = alice, amount = 3).run(sender = admin)
        # scenario += c1.mint(address = alice, amount = 3).run(sender = admin)
        scenario.h2("Alice transfers to Bob")
        scenario += c1.transfer(f = alice, t = bob, amount = 4).run(sender = alice)
        scenario.h2("Bob tries to transfer from Alice but he doesn't have her approval")
        scenario += c1.transfer(f = alice, t = bob, amount = 4).run(sender = bob, valid = False)
        scenario.h2("Alice approves Bob and Bob transfers")
        scenario += c1.approve(f = alice, t = bob, amount = 5).run(sender = alice)
        scenario += c1.transfer(f = alice, t = bob, amount = 4).run(sender = bob)
        scenario.h2("Bob tries to over-transfer from Alice")
        scenario += c1.transfer(f = alice, t = bob, amount = 4).run(sender = bob, valid = False)
        scenario.h2("Admin burns Bob token")
        scenario += c1.burn(address = bob, amount = 1).run(sender = admin)
        scenario.h2("Alice tries to burn Bob token")
        scenario += c1.burn(address = bob, amount = 1).run(sender = alice, valid = False)
        scenario.h2("Admin pauses the contract and Alice cannot transfer anymore")
        scenario += c1.setPause(True).run(sender = admin)
        scenario += c1.transfer(f = alice, t = bob, amount = 4).run(sender = alice, valid = False)
        scenario.h2("Admin transfers while on pause")
        scenario += c1.transfer(f = alice, t = bob, amount = 1).run(sender = admin)
        scenario.h2("Admin unpauses the contract and transferts are allowed")
        scenario += c1.setPause(False).run(sender = admin)
        scenario += c1.transfer(f = alice, t = bob, amount = 1).run(sender = alice)

        # scenario.verify(c1.data.totalSupply == 5000)
        # scenario.verify(c1.data.balances[alice].balance == 800)
        # scenario.verify(c1.data.balances[bob].balance == 900)
        
        